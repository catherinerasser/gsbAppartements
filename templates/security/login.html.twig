{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<style>    .example-wrapper { margin: 1em auto; max-width: 600px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% block stylesheets %}
{{ parent()}}
{% endblock %}

<div class="example-wrapper">
<h1>Se connecter </h1>

</br></br></br>
 <form method="post">
 {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    <input value="{{ last_username }}" id="name" type="text" class="form-control" name="login" 
    placeholder="Login" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Login'" required autofocus>
  </div>
  </br>
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    <input id="name" type="password" class="form-control" name="password" placeholder="Mot de passe" 
    onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mot de passe'" required>
  </div>
</br></br></br>
  <div>
  <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
  <center><input type="submit" value="Valider" class="btn btn-success" name="valider"/>
  <input type="reset" value="Annuler" class="btn btn-danger" name="annuler"/></center>
</div>
</form> 

</div>
{% endblock %}