            <input name="login" type= "hidden" value ={{ cli.getUsername() }} size = "1" />
            <center><td><input type="submit" value="Supprimer" class="btn btn-danger" name="Supprimer"/></td><center>
        </form>
      </tr> 
    {% endfor %}
    {% for loc in locs %}
      <tr>
        <center><td>{{ loc.getNomPe() }}</td></center>
        <center><td>0{{ loc.getTelephonePe() }}</td></center>
        <center><td>{{ loc.getEmail() }}</td></center>
        <center><td>{{ loc.getUsername() }}</td></center>
        <center><td>0{{ loc.getTelBanque() }}</td></center>
        <center><td>{{ loc.getType() }}</td></center>
        <form method="post" action="/supprimer">
            <input name="login" type= "hidden" value ={{ loc.getUsername() }} size = "1" />
            <center><td><input type="submit" value="Supprimer" class="btn btn-danger" name="Supprimer"/></td><center>
