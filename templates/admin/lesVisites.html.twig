{% extends 'baseAdm.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<style> .example-wrapper { margin: 1em auto; max-width: 900px; width: 90%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
 

    <h1>Liste des Visites</h1>
    </br></br>

<table class="table table-hover">
    <thead>
      <tr>
        <center><th>Client</th></center>
        <center><th>Appartement</th></center>
        <center><th>Date de visite</th></center>
      </tr>
    </thead>
    <tbody>
    {% for visi in visis %}
    <tr>
        <center><td>{{ visi.getIdClient().getNomPe() }}</td></center>
        <center><td>{{ visi.getIdAppartement().getNomAppart() }}</td></center>
        <center><td>{{ visi.getDateVisite()|date('d/m/Y') }}</td></center>
    </tr> 
    {% endfor %}
    
    </tbody>
  </table>
  </br>

</div>
{% endblock %}