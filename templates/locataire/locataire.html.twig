{% extends 'baseLoc.html.twig' %}

{% block title %}Locataire{% endblock %}

{% block body %}
<style>    .example-wrapper { margin: 1em auto; max-width: 900px; width: 90%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
 


    <h1>Mon Espace Locataire</h1>
    </br></br>
    <table class="table">
          <tr>
      <td class="space-bottom">
        <div class="card" style="width:190px">
            <div class="card-header">
                <img src="{{ asset('build/images/homavatar.png') }}" style="width:100%">
            </div></br>
        <div class="card-body">{{ app.user.getNomPe() }} {{ app.user.getPrenomPe() }}</div></br>
        <div class="card-footer">
            
            <!-- Button trigger modal -->
<a  type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter">
  Modifier
</a>
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLongTitle">Modifications</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
        <form class="form-horizontal" action="/validerModificationL">
 <div class="form-group">
      <label class="control-label col-sm-3" for="nom">Nom :</label>
      <div class="col-sm-7">
        <input value={{ app.user.getNomPe() }} type="text" class="form-control" id="nom"  name="nom">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-3" for="prenom">Prénom :</label>
      <div class="col-sm-7">
        <input value={{ app.user.getPrenomPe() }} type="text" class="form-control" id="prenom"  name="prenom">
      </div>
    </div>
  <div class="form-group">
      <label class="control-label col-sm-3" for="adresse">Adresse :</label>
      <div class="col-sm-7">
        <input value='{{ app.user.getAdressePe() }}' type="text" class="form-control" id="adresse"  name="adresse">
      </div>
    </div>
 <div class="form-group">
      <label class="control-label col-sm-3" for="cp">Code postal :</label>
      <div class="col-sm-7">
        <input value={{app.user.getCodePostal()}} oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');" class="form-control" id="cp"  name="cp">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-3" for="ville">Ville :</label>
      <div class="col-sm-7">
        <input value={{ app.user.getNomVille() }} type="text" class="form-control" id="ville"  name="ville">
      </div>
    </div>
    </br>
 <div class="form-group">
      <label class="control-label col-sm-3" for="tel">Téléphone :</label>
      <div class="col-sm-7">
        <input value=0{{ app.user.getTelephonePe() }} type="text" oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');" class="form-control" id="tel"  name="tel">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-3" for="email">Email :</label>
      <div class="col-sm-7">
        <input value={{ app.user.getEmail() }} type="email" class="form-control" id="email"  name="email">
      </div>
    </div>
    </br>
     <div class="form-group">
      <label class="control-label col-sm-3" for="telB">Tel banque :</label>
      <div class="col-sm-7">
        <input value=0{{ app.user.getTelBanque() }} type="text" oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');" class="form-control" id="telB"  name="telB">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-3" for="rib">RIB :</label>
      <div class="col-sm-7">
        <input value={{ app.user.getNumCpteBanque() }} type="text" class="form-control" id="rib"  name="rib">
      </div>
    </div>
    </br>
    <input type="hidden" value={{ app.user.getUsername()}} name="login" id="login">

      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success">Modifier</button></form>
      </div>
    </div>
  </div>
</div>
        </div>




    </td>
    <td class="space-bottom">
        <p>Mon numéro de Compte Bancaire : {{ app.user.getNumCpteBanque() }}</p>
        <p>Mon adresse : {{ app.user.getAdressePe() }} -
        {{ app.user.getCodePostal() }} 
        à {{ app.user.getNomVille() }}</p>
        <p>Mon numéro de Téléphone : 0{{ app.user.getTelephonePe() }}</p>
        <p>Mon email : {{ app.user.getEmail() }}</p>
        <p>Ma date d'anniversaire : {{ app.user.getAnniv()|date('d/m/Y') }}</p>
        <p>Mon login : {{ app.user.getUsername() }}</p>
        <p>Le numéro de ma banque : 0{{ app.user.getTelBanque() }}</p>
        
    </td>
    </table>







</div>


{% endblock %}