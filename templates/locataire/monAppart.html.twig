{% extends 'baseLoc.html.twig' %}

{% block title %}Locataire{% endblock %}

{% block body %}
<style>    .example-wrapper { margin: 1em auto; max-width: 900px; width: 90%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
 


    <h1>Mon Apartement</h1>
    </br></br>



<table class="table">
  
<tr>
  <td>
         <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:300px;">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    {% for i in 1..app.user.getNumAppart().getPhotos()|length-1 %}
    <li data-target="#myCarousel" data-slide-to={{ i }}></li>
    {% endfor %}
  </ol> 
  

  <!-- Wrapper for slides -->

  <div class="carousel-inner" style="height:200px;" >
  {% for photo in app.user.getNumAppart().getPhotos() %}
    {% set o = 1 %}
  {%if o == 1 %}
    <div class="item active">
      <img src="{{ asset('build/images/' ~ photo.getNomPhoto() ~ '.jpg') }}" alt={{photo.getNomPhoto()}} style='width:100%;'>
    </div>
   {% endif %} 
   <div class="item">
      <img src="{{ asset('build/images/' ~ photo.getNomPhoto() ~ '.jpg') }}" alt={{photo.getNomPhoto()}} style='width:100%;'>
    </div>
    {% set o = o + 1 %}
    {% endfor %}
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</td>
<td class="space-bottom">
<h3 class="space-left">{{ app.user.getNumAppart().getNomAppart() }}</h3>
<p class="space-left">{{ app.user.getNumAppart().getNbVoy() }} voyageur(s) • {{ app.user.getNumAppart().getNbChamb() }} chambre(s) • {{ app.user.getNumAppart().getNbLits() }} lit(s) • {{ app.user.getNumAppart().getNbSb() }} salle(s) de bain</p>
<p class="space-left">
{% if app.user.getNumAppart().getWifi() %} Wifi • {% endif %}{% if app.user.getNumAppart().getChauffage() %}Chauffage • {% endif %}{% if app.user.getNumAppart().getCuisine() %}Cuisine • {% endif %}{% if app.user.getNumAppart().getLaveLinge() %}Lave-linge{% endif %}</p>
</td>
<form method="post" action="/infoALoc">
  <input name="id" type="hidden" value={{ app.user.getNumAppart().getId() }} size = "1" id="id"/>
   <center><td><input type="submit" value="Info" class="btn btn-info" name="Info"/></td><center>
   </form>
</tr>

</table>


</div>


{% endblock %}