{% extends 'basePro.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<style>    .example-wrapper { margin: 1em auto; max-width: 750px; width: 90%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">


<h1>Modifier l'appartement</h1></br>

    </br><form class="form-horizontal" action="/validerModifApp">
 <div class="form-group">
      <label class="control-label col-sm-5" for="nom">Nom de l'appartement :</label>
      <div class="col-sm-7">
        <input value="{{ appart.getNomAppart() }}" type="text" class="form-control" id="nom"  name="nom">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-5" for="loc">Prix de location (quotien) :</label>
      <div class="col-sm-7">
        <input value={{ appart.getPrixLoc() }} oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');" class="form-control" id="loc"  name="loc">
      </div>
    </div>
  <div class="form-group">
      <label class="control-label col-sm-5" for="char">Prix des charges (quotien) :</label>
      <div class="col-sm-7">
        <input value={{ appart.getPrixCharges() }} oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');" class="form-control" id="char"  name="char">
      </div>
    </div>
 
    
    </br>
    <input type="hidden" value={{ appart.getId()}} name="id" id="id">

      </div>
        <center><button type="submit" class="btn btn-success">Modifier</button></center>
        </form>
        
    </br>
 </br>
 </br>
 <form method="post" action="/appartementsPro">
    <center><button  type="submit" class="btn btn-warning" >Retour</button><center>
</form>
</br>
</br>
   
</div>
{% endblock %}